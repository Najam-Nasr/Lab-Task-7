#include<stdio.h>
#include <string.h>
int main(){
    int j,a=0,e=0,i=0,o=0,u=0;
    char w[100];
    char vowel[] = {'a','e','i','o','u','A','E','I','O','U' };
    printf("Enter a word: ");
    fgets(w, sizeof(w), stdin);
    
    for(j=0; j<strlen(w); j++){
	    switch(w[j]){
	     case 'a': a++;
	     break;
	     case 'e': e++;
	     break;
	     case 'i': i++;
	     break;
	     case 'o': o++;
	     break;
	     case 'u': u++;
	     break;
		 }
    }
    printf("a=%d ",a);
    printf("e=%d ",e);
    printf("i=%d ",i);
    printf("o=%d ",o);
    printf("u=%d ",u);
}
